                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nam"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="Ngày sinh:"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="22/12/1996"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="Số điện thoại:"/>
                    <TextView
                        android:layout_width="match_parent"
