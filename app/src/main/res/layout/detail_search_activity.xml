<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FAHScreen.Main.DetailSearchActivity">
    <include layout="@layout/check_connection_header"/>
    <Button
        android:id="@+id/btnSearch"
        android:text="Tìm kiếm"
        android:background="@drawable/fah_control_button"
        android:onClick="onClickSearch"
        android:layout_margin="@dimen/margin_control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wrap_content_control" />

    <ListView
        android:id="@+id/lstSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"/>
</LinearLayout>