<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <include layout="@layout/check_connection_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_directions_car"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Name: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_directions_car"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Company: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtAboutCompany"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text|textMultiLine"
                    android:background="@drawable/fah_control_edit_test_default"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job's Description: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:scrollbars="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Basic Required: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtRequired"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:scrollbars="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Benifit: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtBenifit"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:scrollbars="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of applicants: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtSoLuong"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_directions_car"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:inputType="number"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deadline: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtDate"
                    android:onClick="onClickDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_menu_gallery"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:layout_gravity="left"
                    android:editable="false"
                    android:hint="mm/dd/yyyy"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_directions_car"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Working time: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ckbTime1"
                        android:text="Morning"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ckbTime2"
                        android:text="Afternoon"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ckbTime3"
                        android:text="Evening"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salary: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:layout_marginBottom="10dp"
                    android:columnCount="4"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/wrap_content_control">
                        <EditText
                            android:id="@+id/cbxLuong"
                            android:editable="false"
                            android:gravity="center"
                            android:background="@drawable/fah_control_combobox"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:drawableRight="@drawable/ic_arrow_down"
                            android:layout_marginRight="@dimen/margin_control"
                            android:layout_width="120dp"
                            android:layout_height="@dimen/wrap_content_control" />
                        <EditText
                            android:id="@+id/txtLuong1"
                            android:layout_width="90dp"
                            android:layout_height="@dimen/wrap_content_control"
                            android:background="@drawable/fah_control_edit_test_default"
                            android:inputType="numberDecimal"
                            android:singleLine="true" />
                        <TextView
                            android:id="@+id/lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="~"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"/>
                        <EditText
                            android:id="@+id/txtLuong2"
                            android:layout_width="90dp"
                            android:layout_height="@dimen/wrap_content_control"
                            android:background="@drawable/fah_control_edit_test_default"
                            android:inputType="number"
                            android:singleLine="true" />
                    </TableRow>
                </GridLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_directions_car"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_directions_car"
                    android:background="@drawable/fah_control_edit_test_default"
                    android:inputType="phone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type of article: "
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wrap_content_control"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_height="@dimen/wrap_content_control"
                        android:layout_width="fill_parent">
                        <EditText
                            android:id="@+id/cbxTypeOfArticle"
                            android:layout_width="120dp"
                            android:editable="false"
                            android:layout_height="@dimen/wrap_content_control"
                            android:gravity="center"
                            android:background="@drawable/fah_control_combobox"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:drawableRight="@drawable/ic_arrow_down"/>
                        <EditText
                            android:id="@+id/txvLoai"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wrap_content_control"
                            android:editable="false"
                            android:focusable="false"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/margin_control"
                            android:background="@drawable/fah_control_edit_test_default"/>
                    </TableRow>
                </GridLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
