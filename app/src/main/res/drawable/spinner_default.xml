<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle"
                    android:padding="10dp">

                    <stroke android:width="1dp" android:color="@color/colorBlack" />
                    <corners android:radius="@dimen/radius_control" />
                    <gradient
                        android:startColor="@color/startColorButtonDefault"
                        android:centerColor="@color/centerColorButtonDefault"
                        android:endColor="@color/endColorButtonDefault"
                        android:type="linear" />
                </shape>
            </item>
            <item >
                <bitmap android:gravity="left|center" android:src="@mipmap/ic_launcher" />
                <bitmap android:gravity="right|center" android:src="@mipmap/ic_launcher" />
            </item>
        </layer-list>
    </item>
</selector>